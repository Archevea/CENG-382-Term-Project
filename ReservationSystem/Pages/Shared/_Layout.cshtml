@using Microsoft.AspNetCore.Identity
@inject SignInManager<ReservationSystem.Models.ApplicationUser> SignInManager
@inject UserManager<ReservationSystem.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Class Reservation System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Site-wide custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- Bootswatch Minty theme for Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/minty/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Add top margin to main container to avoid overlap with fixed navbar */
        body > .container {
            margin-top: 70px;
        }
    </style>

    <!-- Optional page-specific styles -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <!-- Main navigation bar -->
        <nav class="navbar navbar-expand-lg bg-primary fixed-top" data-bs-theme="dark">
            <div class="container-fluid">
                <!-- Brand/logo link -->
                <a class="navbar-brand me-auto" asp-area="" asp-page="/Index"><i class="fa-solid fa-calendar-check me-2"></i>Class Reservation System</a>

                <!-- Responsive navbar toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content (links, login partial) -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Additional navigation links can be added here -->
                    </ul>

                    <!-- Login/logout/user info partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content container -->
    <div class="container" style="padding-top: 70px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- jQuery and Bootstrap JS libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Site-wide custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- CDN Bootstrap JS (for Bootswatch theme compatibility) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
