@page
@model ReservationSystem.Pages_Admin_Terms.CreateModel

@{
    ViewData["Title"] = "Create Term";
}

<!-- Main container for the create term form -->
<div class="container mt-4">
    <h1 class="mb-4 text-center text-primary">Create Term</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Term creation form -->
                    <form method="post">
                        <!-- Display model validation summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Term Name input field -->
                        <div class="mb-3">
                            <label asp-for="Term.Name" class="form-label fw-bold">Term Name <span class="text-danger">*</span></label>
                            <input asp-for="Term.Name" class="form-control" />
                            <span asp-validation-for="Term.Name" class="text-danger"></span>
                        </div>

                        <!-- Start Date input field -->
                        <div class="mb-3">
                            <label asp-for="Term.StartDate" class="form-label fw-bold">Start Date</label>
                            <input asp-for="Term.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="Term.StartDate" class="text-danger"></span>
                        </div>

                        <!-- End Date input field -->
                        <div class="mb-3">
                            <label asp-for="Term.EndDate" class="form-label fw-bold">End Date</label>
                            <input asp-for="Term.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="Term.EndDate" class="text-danger"></span>
                        </div>

                        <!-- Submit button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Create</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to list button -->
            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
