@page
@model ReservationSystem.Pages_Admin_Classrooms.DeleteModel

@{
    ViewData["Title"] = "Delete Classroom";
}

<style>
    /* Styling for the delete confirmation container */
    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
</style>

<!-- Main delete confirmation container -->
<div class="delete-container">
    <h2 class="text-danger mb-4">Delete Classroom</h2>

    <!-- Warning message for delete confirmation -->
    <div class="alert alert-warning">
        Are you sure you want to delete this classroom?
    </div>

    <!-- Display classroom details -->
    <dl class="row mb-4">
        <dt class="col-sm-4 fw-bold">Name:</dt>
        <dd class="col-sm-8">@Model.Classroom.Name</dd>

        <dt class="col-sm-4 fw-bold">Capacity:</dt>
        <dd class="col-sm-8">@Model.Classroom.Capacity</dd>
    </dl>

    <!-- Delete confirmation form -->
    <form method="post" class="d-flex justify-content-between">
        <input type="hidden" asp-for="Classroom.Id" /> <!-- Hidden field for classroom ID -->
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
    </form>
</div>
